<div id="message-<%= message.id %>">
  <small style="color: black;">
    <strong><%= message.user.first_name %></strong>
    <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
  </small>
  <div class="display-inline-message" style="margin-left: 10px;">
    <%= cl_image_tag message.user.avatar.key, :width => 40, :height => 40, style: "border-radius: 50%; display: block; margin-bottom: 10px;" %>
    <p style="color: black; margin-bottom: 0;"><%= message.content %></p>
  </div>
</div>
