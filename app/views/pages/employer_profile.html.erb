<div class="container">
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <%= link_to "My profile", employer_profile_path, class: "nav-link active" %>
    </li>
    <li class="nav-item">
      <%= link_to "My posts", my_posts_path, class: "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to "Pending job applications", job_applications_path, class: "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to "My calendar", employer_calendar_path, class: "nav-link" %>
    </li>
  </ul>
  <div class="user-profile">
    <div class="row">
      <div class="col-6">
        <%= cl_image_tag current_user.avatar.key, style:"width:400px; height:400px; object-fit:cover;", class: "avatar dropdown-toggle mt-5 mb-5  ", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      </div>
      <div class="col-6 mt-5 mb-5">
        <div class="content">
          <h1><%= current_user.nickname %></h1>
            <div class="profile-description">
              <h3>About the company: </h3>
              <p style="font-size: 20px;"><%= current_user.profile_description %></p>
            </div>
          <div class="d-flex">
            <%= link_to "My messages", chatrooms_path, class: "card-button mb-3 mt-3 mx-3", style: "width: 200px;" %>
            <button type="button" class="search-button mb-3 mt-3" , style="width: 200px;">My appointments</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
