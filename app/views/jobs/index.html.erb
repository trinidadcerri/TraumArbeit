<div class="container mt-5">
<%= form_with url: jobs_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control input",
    placeholder: "Looking for the job...", class: "input"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
<div class="banner">
<h1>Traum job</h1>
<h3>Our goal is to make your job searchan inspiring process and not an anslaving one</h3>
</div>
<div class="cards">
<div class="container py-5 mb-5">
  <div class="row justify-content-between">
<% @jobs.each do |job|%>
  <div class="col-12 col-lg-3">
    <div class="card box-shadow mx-auto my-5" style="width: 18rem; ">
      <img src="https://source.unsplash.com/random/?work" class="card-img-top" alt="...">
      <div class="card-body">
        <%= link_to "See details", job , class: "btn btn-primary mb-3"%>
        <h5 class="card-title"><%= job.position %></h5>
        <p class="card-text">Salary: <%= job.salary %> Euro</p>
        <hr>
        <hr>
      </div>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#ffffff" fill-opacity="1" d="M0,256L48,256C96,256,192,256,288,245.3C384,235,480,213,576,181.3C672,149,768,107,864,112C960,117,1056,171,1152,186.7C1248,203,1344,181,1392,170.7L1440,160L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>
      <a href=""><i class="fas fa-euro-sign"></i></a>
    </div>
  </div>
<% end %>
</div>
</div>
</div>
</div>
