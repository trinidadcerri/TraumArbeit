<div class="main-container">
<div class="search-bar">
<%= form_with url: jobs_path, method: :get, class: "d-flex ", style: "width:100%" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control input",
    placeholder: "Looking for the job...", class: "input",
    style: "width:100%"
  %>
  <%= submit_tag "Search", class: "search-button" ,  style: "margin-left: 5px" do %>
  <i class="fa-solid fa-magnifying-glass"></i>
  <% end %>
<% end %>
</div>
<div class="dream-job-picture mt-3">
    <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="<%= image_url("dream_job.jpg") %>" class="d-block w-100" height=700 alt="...">
        </div>
        <div class="carousel-item">
          <img src="<%= image_url("dream_job2.jpg")%>" class="d-block w-100" height=700 alt="...">
        </div>
        <div class="carousel-item">
          <img src="<%= image_url("dream_job3.jpg") %>" class="d-block w-100" height=700 alt="...">
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
    </div>
<div class="cards">
<div class="py-5 mb-5">
  <div class="row justify-content-center">
<% @jobs.each do |job|%>
  <div class="col-12 col-lg-3">
    <div class="card box-shadow my-5">
    <%= image_tag "#{job.level}.jpg", class: "card-img-top", height: 200%>
      <div class="card-body">
        <%= link_to job, class: "card-button mb-3" do %>
        <i class="fa-solid fa-magnifying-glass"></i> See details
        <% end %>
        <h5 class="card-title"><i class="fa-solid fa-user-large"></i> <%= job.position %></h5>

        <p class="card-text"><i class="fa-solid fa-hand-holding-dollar"></i> <%= job.salary %> </p> <i class="far fa-money-check-edit-alt"></i>
        <p><i class="fa-solid fa-location-dot"></i> Berlin</p>
      </div>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#ffffff" fill-opacity="1" d="M0,256L48,256C96,256,192,256,288,245.3C384,235,480,213,576,181.3C672,149,768,107,864,112C960,117,1056,171,1152,186.7C1248,203,1344,181,1392,170.7L1440,160L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>
      <a href=""><i class="fas fa-euro-sign euro-icon"></i></a>
    </div>
  </div>
<% end %>
</div>
</div>
</div>
</div>
