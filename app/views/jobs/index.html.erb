<div class="main-container">
<div class="wrap">
<div class="search">
<%= form_with url: jobs_path, method: :get, class: "searchTerm ", style: "width:100%" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control input",
    placeholder: "Looking for the job...", class: "input",
    style: "width:100%"
  %>
  <%= submit_tag "Search", class: "searchButton" ,  style: "margin-left: 5px" do %>
  <i class="fa fa-search"></i>
  <% end %>
<% end %>
  </div>
</div>
<div class="cards">
<div class="py-5 mb-5">
  <div class="row justify-content-center">
<% @jobs.each do |job|%>
  <div class="col-12 col-lg-3">
    <div class="card box-shadow my-5">
    <%#= image_tag "#{job.level}.png", class: "card-img-top", height: 200%>
      <div class="card-body">
        <strong><p class="card-title mb-3"><i class="fa-solid fa-user-large"></i> <%= job.position %></p></strong>
        <p class="card-title"> <i class="fa-solid fa-hand-holding-dollar"></i>  <%= job.salary %> </p>
        <p class="card-title"><i class="fa-solid fa-location-dot"></i> Berlin</p>
        <p class="card-title"> <i class="fas fa-reply-all"></i> <%= job.level %> </p>
        <%= image_tag "#{job.level}.png", class: "card-img-top", height: 200%>
        <p class="card-title"> <i class="fa-solid fa-building"></i> <span style="background-color: yellow;"><%= job.user.nickname %> </span>  </p>
        <%= link_to job, class: "card-button mb-3" do %>
        <i class="fa-solid fa-magnifying-glass"></i> See details
        <% end %>
      </div>
    </div>
  </div>
<% end %>
</div>
</div>
</div>
</div>
