<div class="container chatroom">
  <div class="messages">
    <% @chatroom.messages.each do |message| %>
      <div class="message" id="message-<%= message.id %>">
        <div class="meta">
          <div class="user"><strong><%= message.user.first_name %></strong></div>
          <div class="time"><i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i></div>
        </div>
        <div class="content"><%= message.content %></div>
      </div>
    <% end %>

  <%= simple_form_for [@chatroom, @message], html: {class: "form"} do |f| %>
    <%= f.input :content, label: false, placeholder: "Type your message here..."%>
    <%= f.submit "Send", class: "search-button" %>
  <% end %>
  </div>
</div>
