 <div class="container chatroom customize-container">
 <h1 class="chatroom-header">Select the chat you want message:</h1>
 <ul class="chatroom-list">
  <% @chatrooms.each do |chatroom| %>
      <li>
  <% if current_user.first_name == chatroom.employer_name %>
  <div class="row">
  <div class="col-10">
  <div class="row">
  <div class="col-1">
  <%= cl_image_tag chatroom.job_application.user.avatar.key , :width => 40, :height => 40, style: "border-radius: 50%; display: block; margin-bottom: 30px;"%>
  </div>
  <div class="col-11">
  Chat with <%= link_to chatroom.applicant_name, chatroom_path(chatroom)%> about <strong> <%= chatroom.job_application.job.position %> </strong> position
  </div>
  </div>
  </div>
  <div class="col-2">
  <strong > <p class= "mt-2  status" ><%=chatroom.job_application.status.upcase %> </p></strong>
  </div>
  </div>
  <% else %>
   <div class="row">
  <div class="col-1">
  <%= cl_image_tag chatroom.job_application.job.user.avatar.key , :width => 40, :height => 40, style: "border-radius: 50%; display: block; margin-bottom: 10px;"%>
  </div>
  <div class="col-11">
  <%= link_to chatroom.employer_name, chatroom_path(chatroom)%>
  </div>
  <% end %>
  </li>
  <% end %>
 </ul>
</div>
