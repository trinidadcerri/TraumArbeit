<div class="container">
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <%= link_to "My profile", employer_profile_path, class: "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to "My posts", my_posts_path, class: "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to "Pending job applications", job_applications_path, class: "nav-link  active" %>
    </li>
    <li class="nav-item">
      <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">My calendar</a>
    </li>
  </ul>
<div class="cards main-container">
  <div class="py-5 mb-5">
    <h1>My Pending Job Applications</h1>
      <div class="row justify-content-center">
      <% @my_applicants.job_applications.each do |application| %>
            <li>
              <p><%= job_application.user.nickname %> wants to apply for this job position: </p>
              <% if job_application.status == "pending" %>
                <%= link_to "Accept", accept_path(job_application), class: "card-button mb-3", style: "width: 100px" %>
                <%= link_to "Decline", decline_path(job_application), class: "card-button mb-3", style: "width: 100px" %>
              <% elsif job_application.status == "accepted" %>
                <p>The job application was accepted</p>
                <%= link_to "Decline", decline_path(job_application), class: "card-button mb-3", style: "width: 100px" %>
                <%= link_to "Make an appoiment", new_job_appointment_path(@job), class: "card-button mb-3", style: "width: 100px" %>
                <%= link_to "Back to my profile", employer_profile_path, class: "card-button mb-3", style: "width: 100px" %>
              <% end %>
            </li>
          <% end %>
      </div>
    </div>
  </div>
</div>
